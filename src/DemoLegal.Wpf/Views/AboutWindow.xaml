<Window x:Class="DemoLegal.Wpf.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе" Height="240" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
  <Grid Margin="16" RowDefinitions="Auto,Auto,*,Auto">
    <TextBlock Text="Demo Legal" FontSize="18" FontWeight="Bold"/>
    <TextBlock Grid.Row="1" Text="Утилита импорта данных ЛС, формирования дел и досудебных пакетов." Margin="0,8,0,8"/>
    <TextBlock Grid.Row="2" TextWrapping="Wrap"
               Text="Версия MVP. БД: SQLite. Шаблоны: текстовые (заменяемо на DOCX/PDF). Данные: CSV (.csv) с разделителем ';'."/>
    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="OK" Width="100" IsDefault="True" Click="Ok_Click"/>
    </StackPanel>
  </Grid>
</Window>
