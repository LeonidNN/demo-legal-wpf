<Window x:Class="DemoLegal.Wpf.CandidatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реестр кандидатов" Height="540" Width="900" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Button Content="Обновить" Width="120" Height="28" Margin="0,0,8,0" Click="Refresh_Click"/>
            <Button x:Name="ExportBtn" Content="Сформировать документы" Width="220" Height="28" Click="ExportDocs_Click" IsEnabled="False"/>
            <Button Content="Открыть папку" Width="140" Height="28" Margin="8,0,0,0" Click="OpenFolder_Click"/>
            <TextBlock x:Name="StatusText" Margin="12,4,0,0" VerticalAlignment="Top" Opacity="0.8" Text="Готово"/>
        </StackPanel>

        <DataGrid x:Name="GridCases"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  SelectionChanged="GridCases_SelectionChanged" />

        <TextBlock Grid.Row="2"
                   Text="Подсказка: выделите строки (Ctrl/Shift) — кнопка «Сформировать документы» станет активной."
                   Opacity="0.7"
                   Margin="0,8,0,0"/>
    </Grid>
</Window>
